<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <Button
            android:text="Slide In"
            android:onClick="onClickSlideIn"
            android:layout_width="257dp"
            android:layout_height="56dp"
            android:id="@+id/button5"
            app:layout_constraintLeft_toLeftOf="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            android:layout_marginTop="40dp"
            app:layout_constraintRight_toRightOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="Slide Out"
        android:onClick="onClickSlideOut"
        android:layout_width="257dp"
        android:layout_height="56dp"
        android:id="@+id/button7"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"

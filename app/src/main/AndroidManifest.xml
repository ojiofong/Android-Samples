<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ojiofong.androidsamples">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <!--ACCESS_COARSE_LOCATION is required for Bluetooth.Action_Found in API 23-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <!--WebRTC requirements start-->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!--WebRTC requirements end-->

    <application
        android:allowBackup="true"
        android:name=".AndroidSamplesApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ojiofong.androidsamples.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Activity-->
        <activity android:name="com.ojiofong.androidsamples.ui.SensorActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.RxJavaActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.VideoActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.ConstraintActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.RecyclerPlayActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.AnimationActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.DaggerActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.ButterKnifeActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.BoundServiceActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.BluetoothActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.WebRTCActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.ThreadPoolActivity"/>
        <activity android:name="com.ojiofong.androidsamples.ui.AsyncTaskLoaderActivity"/>

        <!--Service-->
        <service android:name="com.ojiofong.androidsamples.service.TestService"/>

    </application>

</manifest>